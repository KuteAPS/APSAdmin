
@{
    ViewBag.Title = "UpdateResource";
    Layout = "~/Views/Shared/_LayoutNull.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <form class="form-horizontal m-t " id="commentForm">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>基本信息</h5>
                    </div>
                    <div class="ibox-content">

                        <div class="form-group" id="Id">
                            <label class="col-sm-2 control-label">对接ID：</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="resources" placeholder="123" value="@ViewBag.Resource.Resources"><span class="help-block m-b-none">请输入与此对接系统的ID</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">系统编号：</label>
                            <div class="col-sm-9">
                                <input type="text" name="resourcesCode" class="form-control" placeholder="XFCAD001" value="@ViewBag.Resource.ResourcesCode"> <span class="help-block m-b-none">请输入系统编号CAD：西服：CFCAD，衬衣：CYCAD...</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">名称：</label>
                            <div class="col-sm-9">
                                <input type="text" name="resourcesName" class="form-control" placeholder="张三" value="@ViewBag.Resource.ResourcesName"> <span class="help-block m-b-none">请输入识别名称</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">时间范围：</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="DateType" name="DateType"></select><span class="help-block m-b-none">请输用户分组</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">工作时间：</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="Type" name="Type"></select><span class="help-block m-b-none">请输用户分组</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-11 control-label">
                                <button class="btn btn-primary" type="button" id="btn_submit">提交</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    
    $.post("/Attendance/FlagStatus", function (data) {
        var html = '<option  value="*">跟随全体设置</option>';
        for (var i = 0; i < data.length; i++) {
            var check = ""
            if (data[i].AttendanceCode === '@ViewBag.Attendance.FlagStatus') {
                check = "selected";
            }
            html += ('<option ' + check + ' value="' + data[i].AttendanceCode + '">' + data[i].AttendanceCode + '(' + data[i].AttendanceMode + ')</option>');
        }
        $("#DateType").html(html);
    }, "json");



</script>