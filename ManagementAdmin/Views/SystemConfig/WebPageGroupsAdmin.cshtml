
@{
    ViewBag.Title = "WebPageGroupsAdmin";
    Layout = "~/Views/Shared/_LayoutBootstrapTable.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>页面分组列表</h5>
                </div>
                <div class="ibox-content">

                    <!-- Panel Other -->

                    <div class="btn-group hidden-xs" id="exampleTableEventsToolbar" role="group">
                        @*<button type="button" class="btn btn-outline btn-default">
                                <i class="glyphicon glyphicon-plus" aria-hidden="true"></i>
                            </button>*@
                        <button type="button" class="btn btn-outline btn-default" id="btn_Edit">
                            <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-outline btn-default" id="btn_Del">
                            <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
                        </button>
                    </div>


                    <table id="TableAdmin" data-height="auto" data-mobile-responsive="true">
                        <thead>
                            <tr>
                                <th data-field="state" data-checkbox="true"></th>
                                <th data-field="Id"  data-sortable="true">ID</th>
                                <th data-field="GroupName" data-sortable="true">分组名称</th>
                                <th data-field="GroupIcon" data-sortable="true">分组图标</th>
                                <th data-field="Sort" data-sortable="true">排序</th>
                            </tr>
                        </thead>
                    </table>

                </div>
            </div>
            <!-- End Example Events -->

        </div>
        <div class="col-sm-6">
            <div class="ibox float-e-margins">

                <div class="ibox-title">
                    <h5 id="editTitle">新增分组</h5>
                </div>

                <div class="ibox-content">
                    <form class="form-horizontal m-t" id="signupForm">

                        <div class="col-md-12">

                            <div class="form-group" id="thisId" hidden>
                                <label class="col-sm-2 control-label">ID：</label>
                                <div class="col-sm-9">
                                    <input type="text" readonly id="id" name="id" class="form-control" value="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">分组名：</label>
                                <div class="col-sm-9">
                                    <input type="text" id="groupName" name="groupName" class="form-control" placeholder="分组名称"> <span class="help-block m-b-none">用户分组管理</span>

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">分组图标：</label>
                                <div class="col-sm-9">
                                    <input type="text" id="groupIcon" name="groupIcon" class="form-control" placeholder="图标"> <span class="help-block m-b-none">分组前图标</span>

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">排序：</label>
                                <div class="col-sm-9">
                                    <input type="number" id="sort" name="sort" class="form-control" placeholder="9999"> <span class="help-block m-b-none">左侧菜单排序</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2">
                                <button class="btn btn-primary" type="button" id="btn_submit">保存</button>
                                <button class="btn btn-primary" type="reset" id="btn_reset">重置</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Script/Systenconfig-WebGroupAdmin-bom.min.js"></script>